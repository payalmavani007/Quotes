<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UploadCategoryFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:src="@drawable/dot"
            android:layout_gravity="right"
            android:padding="12dp"
            android:id="@+id/dot_logout"
            android:layout_height="50dp" />

        <!--<android.support.v7.widget.Toolbar
            android:id="@+id/toolbarNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Quotes"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="30dp"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:text="Upload Category"
            android:layout_marginBottom="3dp"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:id="@+id/upload_category"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@color/colorBlack"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:inputType="textMultiLine"
            android:width="300dp"
            android:minLines="5"
            android:hint="Write Your Quote Here"
            android:gravity="top|left"
            android:paddingLeft="3dp"
            android:singleLine="false"
            android:scrollHorizontally="false"
            android:textSize="20sp"
            android:textColorHint="@color/colorBlack"
            android:id="@+id/write_quotes"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Upload"
            android:id="@+id/upload"
            android:textSize="20sp"/>

    </LinearLayout>
</RelativeLayout>